<li>
	<%= gravatar_for user, :size => 30 %>
	<%= link_to user.name, user %>

	<% if current_user.admin? %>
		<%= button_to "delete", user, :method => :delete, :confirm => 'are you sure?',  :title => "Delete #{user.name}" 	%>
		 <% unless user.privilege %>
		 	<%= link_to "Provide Privilege", "/privilege/#{user.id}/true" %>
		 <% else %>
		 	<% unless user.admin %>
		 		<%= link_to "Restrict Privilege", "/privilege/#{user.id}/false" %>
		 	<% end %>
		 <% end %>
	<% end %>
</li>		